<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/spiderman_with_goblin"
        android:textColor="#6E4C4C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/pic0"
        android:layout_width="405dp"
        android:layout_height="351dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/two" />

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="405dp"
        android:layout_height="351dp"
        android:layout_marginTop="36dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/one" />

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="405dp"
        android:layout_height="351dp"
        android:layout_marginTop="36dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tre" />

    <ImageView
        android:id="@+id/pic3"
        android:layout_width="405dp"
        android:layout_height="351dp"
        android:layout_marginTop="36dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/five" />

    <ImageView
        android:id="@+id/pic4"
        android:layout_width="405dp"
        android:layout_height="351dp"
        android:layout_marginTop="36dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/six" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="343dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic0">

        <ImageButton
            android:id="@+id/pre"
            android:onClick="pre"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="41dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/prev_but" />

        <ImageButton
            android:id="@+id/next"
            android:onClick="next"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="41dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/right_but" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>